@model MVC.ViewModels.Pagination.PaginationInfo

<div class="esh-pager">
    <div class="container">
        <article class="esh-pager-wrapper row">
            <nav>
                <a class="esh-pager-item esh-pager-item--navigable @Model.Previous"
                    id="Previous"                    
                    asp-controller="Catalog"
                    asp-action="Index"
                    asp-route-page="@(Model.ActualPage -1)"
                    asp-route-itemsPage="@(Model.ItemsPerPageRequest)"
                    asp-route-materialFilterApplied =@(Model.MaterialFilterApplied)
                    asp-route-sourceFilterApplied =@(Model.SourceFilterApplied)
                    asp-route-priceMinFilterApplied =@(Model.PriceMinFilterApplied)
                    asp-route-priceMaxFilterApplied =@(Model.PriceMaxFilterApplied)
                    asp-route-weightMinFilterApplied =@(Model.WeightMinFilterApplied)
                    asp-route-weightMaxFilterApplied =@(Model.WeightMaxFilterApplied)
                    asp-route-sizeMinFilterApplied =@(Model.SizeMinFilterApplied)
                    asp-route-sizeMaxFilterApplied =@(Model.SizeMaxFilterApplied)
                    asp-route-sortingApplied =@(Model.SortingApplied)
                    aria-label="Previous">
                    Previous
                </a>
                
                <span class="esh-pager-item">
                    Showing @Model.ItemsPerPage of @Model.TotalItems products - Page @(Model.ActualPage + 1) - @Model.TotalPages
                </span>

                <a class="esh-pager-item esh-pager-item--navigable @Model.Next"
                    id="Next"                    
                    asp-controller="Catalog"
                    asp-action="Index"
                    asp-route-page="@(Model.ActualPage + 1)"
                    asp-route-itemsPage="@(Model.ItemsPerPageRequest)"
                    asp-route-materialFilterApplied =@(Model.MaterialFilterApplied)
                    asp-route-sourceFilterApplied =@(Model.SourceFilterApplied)
                    asp-route-priceMinFilterApplied =@(Model.PriceMinFilterApplied)
                    asp-route-priceMaxFilterApplied =@(Model.PriceMaxFilterApplied)
                    asp-route-weightMinFilterApplied =@(Model.WeightMinFilterApplied)
                    asp-route-weightMaxFilterApplied =@(Model.WeightMaxFilterApplied)
                    asp-route-sizeMinFilterApplied =@(Model.SizeMinFilterApplied)
                    asp-route-sizeMaxFilterApplied =@(Model.SizeMaxFilterApplied)
                    asp-route-sortingApplied =@(Model.SortingApplied)
                    aria-label="Next">
                    Next
                </a>
            </nav>
        </article>
    </div>
</div>

